using System;
using System.Collections.Generic;
using System.Linq;

class Program
{
	static void Main(string[] args)
	{
		Palindrome palindrome = new Palindrome();
		Console.WriteLine("Result "+ palindrome.IsPalindrome("A man a plan a canal Panama"));
		Console.WriteLine("Result "+ palindrome.IsNumberPalindrome(1221));
		
	}
}

class Palindrome
{
	public bool IsPalindrome(string s)
	{
		s = s.Replace(" ","").ToLower();
		char[] charArray = s.ToCharArray();
		Array.Reverse(charArray);
		string reversed = new string(charArray);
		return s == reversed;
	}
	
	public bool IsNumberPalindrome(int x)
	{
		string s = x.ToString();
		char[] charArray = s.ToCharArray();
		Array.Reverse(charArray);
		string reversed = new string(charArray);
		return s == reversed;
	}
}
